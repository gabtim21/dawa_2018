extends home
block content
	h1 Ejemplo de CRUD con Socket IO - Gabtim
	.col-xs-4
		form#formulario
			.form-group
				label(for="_id") ID
				input#_id.form-control(type="text", placeholder="ID del usuario")
			.form-group
				label(for="first_name") Nombre
				input#first_name.form-control(type="text", placeholder="Su Nombre")
			.form-group
				label(for="last_name") Apellidos
				input#last_name.form-control(type="text", placeholder="Sus Aplellidos")
			.form-group
				label(for="timezone") Regi&oacute;n
				input#timezone.form-control(type="text", placeholder="-5", value="-5")
			.form-group
				label(for="locale") Idioma
				input#locale.form-control(type="text", placeholder="Idioma de Preferencia")
			.form-group
				label(for="profile_pic") Foto
				input#profile_pic.form-control(type="text", placeholder="URL de la Foto")
			button.btn.btn-default(type="submit") Guardar
	.col-xs-8
		table.table.table-striped.table-bordered.table-hover
			thead
				tr
					th ID
					th Nombres
					th Apellidos
					th Zona Horaria
					th Idioma
					th Foto
			tbody